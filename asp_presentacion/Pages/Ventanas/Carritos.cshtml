@page
@model asp_presentacion.Pages.Ventanas.CarritosModel
@{
    ViewData["Titulo"] = "";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES SUPERIORES (Acciones de la ventana)
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Carritos</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>
        </div>

        <!-- =====================================================
             HIDDEN FIELDS (ID + campos necesarios en borrado)
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden"
                   asp-for="@Model.Actual!.Id" />

        }
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden"
                   asp-for="@Model.Actual!.Cliente" />
            <input type="hidden"
                   asp-for="@Model.Actual!.Fecha" />
            <input type="hidden"
                   asp-for="@Model.Actual!.ClienteRef" />

        }


        <!-- =====================================================
             MENSAJE EMERGENTE (Errores / Notificaciones)
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_vn panel panel-default">
                <h3>Carritos</h3>

                <div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Cliente
                        </label>
                        <div class="col-lg-6">
                            <input id="nmCliente"
                                   class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Cliente" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Fecha
                        </label>
                        <div class="col-lg-6">
                            <input id="nmFecha"
                                   class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Fecha" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            ClienteRef
                        </label>
                        <div class="col-lg-6">
                            <input id="nmClienteRef"
                                   class="cts_forms form-control"
                                   asp-for="@Model.Actual!.ClienteRef" />
                        </div>
                    </div>

                </div>
            </div>
        }

        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden"
                   asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            ;
        }

        <!-- =====================================================
             POPUP DE CONFIRMACIÓN DE BORRADO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class='popup'>
                <div class='pp_del_inner'>

                    <h3 class="text-start">Mensaje</h3>

                    <p class="text-start mt-3">¿Desea borrar la entidad?</p>

                    <h5 class="text-start">
                        @Model.Actual!.Cliente
                    </h5>

                    <div class="mt-4 text-center">

                        <input type="submit"
                               value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit"
                               value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />

                    </div>
                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO + FILTRO POR CLIENTE
             ===================================================== -->
       @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flCliente"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Cliente"
                       placeholder="Cliente" />
                <br />

                <div class="containers_vn panel panel-default">

                    <table class="tb_data table table-striped table-bordered tablehover">
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Cliente
                            </th>
                            <th class="cl_hidden">
                                Fecha
                            </th>
                            <th class="cl_hidden">
                                ClienteRef
                            </th>
                           
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Id
                                    </td>
                                    <td>
                                        @elemento.Cliente
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.ClienteRef
                                    </td>
                                    
                                    <td>
                                        @elemento.Fecha.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                    </div>
    }
    </form>

 </div>