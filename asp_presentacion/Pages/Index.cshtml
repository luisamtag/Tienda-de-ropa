@page 
@model IndexModel

@{ 
    ViewData["Title"] = ""; 
} 
@if (!Model.EstaLogueado) 
{
    <div class="login-wrapper">

        <div class="login-card">

            <h2 class="login-title">Bienvenido</h2>
            <p class="login-subtitle">Sistema de gestion de ventas e inventarios</p>

            <form method="POST" class="mt-4">

                <div class="form-group mb-3">
                    <label class="form-label">Usuario</label>
                    <input asp-for="@Model.Email" class="form-control login-input" />
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Contraseña</label>
                    <input type="password" asp-for="@Model.Contrasena" class="form-control login-input" />
                </div>

                <div class="text-center">
                    <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn btn-secondary login-btn me-2" />
                    <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn btn-primary login-btn" />
                </div>

            </form>
        </div>
    </div>
} 
else 
{ 
    <div class="text-center"> 
        <h1 class="display-4"> 
            Bienvenido 
        </h1>

        <form method="POST"> 
            <input type="submit" 
                   value="Cerrar" 
                   asp-page-handler="BtClose" 
                   class="btn btn-default" /> 
         </form> 
     </div> 
}